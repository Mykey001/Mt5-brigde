# Database (use Docker: docker-compose up -d postgres)
DATABASE_URL=postgresql://mt5bridge:mt5bridge_password@localhost:5432/mt5bridge

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-here-change-this-to-random-string
ENCRYPTION_KEY=your-encryption-key-here-change-this-to-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis (use Docker: docker-compose up -d redis)
REDIS_URL=redis://localhost:6379/0

# MT5 Settings
MT5_TIMEOUT=60000
SYNC_INTERVAL_SECONDS=2
AUTO_RECONNECT=true
MAX_RECONNECT_ATTEMPTS=5

# MT5 Terminal Path (Windows only)
# MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]
